<div class="flex-1 text-gray-700 text-center shadow-2xl bg-white border-pink-600 border-2 px-5 py-5 m-2 rounded">
<div class="container mt-4">
  <div class="lg:flex lg:items-center">
    <div class="lg:flex-shrink-0">
      <img class="rounded-lg lg:w-64 shadow-2xl" src="<%= @listing.user.avatar %>"/>
    </div>
      <div class="p-5">
        <div>
          <p class="inline-block text-lg px-6 py-4 shadow-2xl leading-none border rounded text-pink-600 border-pink-600 hover:text-white hover:bg-pink-600 mt-4 md:mt-0" >
            <% if policy(@listing).edit? %>
              <%= link_to "Edit", edit_listing_path(@listing) %>
            <% end %>
          </p>
        </div>
        <div>
          <p class="inline-block text-lg px-6 py-4 shadow-2xl leading-none border rounded text-pink-600 border-pink-600 hover:text-white hover:bg-pink-600 mt-4 md:mt-0"><%= link_to "Delete", listing_path(@listing), method: :delete, data: { confirm: "Are you sure you want to delete this listing?"}, class: 'text-danger' %></p>
        </div>
        <div class="mt-5 lg:mt-1 lg:ml-6">
          <p class="uppercase tracking-wide text-lg text-cyan-900 font-bold">Hi, my name is <%= @listing.user.first_name%></p>
        </div>
        <div class="mt-5 lg:mt-1 lg:ml-6">
          <p class="uppercase tracking-wide text-lg text-cyan-900  font-semi-bold"><%= @listing.slogan %></p>
        </div>
        <div>
          <p class="block mt-4 text-lg leading-relaxed font-normal font-sans text-gray-900"><%= @listing.description %></p>
        </div>
        <div>
          <p class="block mt-4 text-lg leading-relaxed font-normal text-gray-900"> Fee: Â¥ <%= @listing.fee %>0 </p>
        </div>
        <br>
        <div>
          <p class="inline-block text-lg px-6 py-4 shadow-2xl leading-none border rounded text-pink-600 border-pink-600 hover:text-white hover:bg-pink-600 mt-4 md:mt-0" >
            <% if policy(Listing).create? %>
              <%= link_to "Rent Me!", new_listing_booking_path(@listing) %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
