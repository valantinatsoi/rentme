<section class="relative bg-white h-80">
  <img
    class="absolute inset-0 object-[75%] sm:object-[25%] object-cover w-full h-full opacity-30"
    src="https://images.unsplash.com/photo-1511988617509-a57c8a288659?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1471&q=80"
    alt="people"
  />

  <div class="relative max-w-screen-xl px-4 py-32 mx-auto lg:h-screen lg:items-center">
    <div class="max-w-xl text-center sm:text-left">
      <h1 class="text-3xl sm:text-5xl text-hotpink italic">
        Book this listing now!
      </h1>
    </div>
  </div>
</section>

<br>
<br>

<div class="relative justify-center p-8 text-center flex border border-transparent rounded-lg m- w-9/12 mx-auto shadow-lg shadow-pink-200">
  <div class="lg:flex justify-center">
    <div class="lg:flex-shrink-0">
      <img class="rounded-lg lg:w-64 shadow-2xl" src="<%= @listing.user.avatar %>"/>
    </div>
      <div class="p-5">
      <div class="flew flex-row m-5 justify-between">
          <p class="inline-block text-sm px-4 py-2 leading-none bg-hotpink rounded text-white border-hotpink border hover:border-hotpink hover:text-hotpink hover:bg-white rounded-full w-36">
            <%= link_to "Edit", edit_listing_path(@listing) %>
          </p>
          <p class="inline-block text-sm px-4 py-2 leading-none bg-hotpink rounded text-white border-hotpink border hover:border-hotpink hover:text-hotpink hover:bg-white rounded-full w-36"><%= link_to "Delete", listing_path(@listing), method: :delete, data: { confirm: "Are you sure you want to delete this listing?"}, class: 'text-danger' %></p>
        </div>
        <div class="mt-5 lg:mt-1 lg:ml-6">
          <p class="uppercase tracking-wide text-lg text-headings font-bold">Hi, my name is <%= @listing.user.first_name%></p>
        </div>
        <div class="mt-5 lg:mt-1 lg:ml-6">
          <p class="uppercase tracking-wide text-lg text-black font-semi-bold"><%= @listing.slogan %></p>
        </div>
        <div>
          <p class="block mt-4 text-lg leading-relaxed italic text-gray-900"><%= @listing.description %></p>
        </div>
        <div>
          <p class="block mt-4 text-lg leading-relaxed font-bold text-black"> Fee: Â¥ <%= @listing.fee %>0 </p>
        </div>
        <br>
        <div>
          <p class="inline-block text-lg px-6 py-4 shadow-2xl leading-none border rounded-3xl text-hotpink border-hotpink hover:text-white hover:bg-hotpink mt-4 md:mt-0" >
            <%= link_to "Rent Me!", new_listing_booking_path(@listing) %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

