
<%# -------------Welcome User, photo and info------------- %>
<div>

  <div class="font-bold text-5xl py-5 text-center underline  ">Welcome <%= current_user.first_name %> </div>

  <div class="flex items-center justify-center">
    <img class="object-cover h-80 w-80 rounded-full items-center mb-5" src="<%= current_user.avatar %>" alt="user profile picture">
  </div>
            <%# -------------Name Email BOX------------- %>
        <div class=" mx-24 max-w-cover px-5 pt-2  rounded-lg overflow-hidden shadow-lg bg-gray-200/20  border-2 border-pink-600">
          <div class="font-bold text-4xl text-justify my-5 "><%= current_user.first_name %> <%= current_user.last_name %></div>
          <div class="font-normal text-2xl text-justify mb-5 "><%= current_user.email %></div>
        </div>


            <%# -------------BOOKINGS BOX------------- %>
            <div class=" m-24 max-w-cover px-5 pt-2 rounded-lg overflow-hidden shadow-lg bg-gray-200/20  border-2 border-pink-600 grid grid-cols-1 divide-y">
              <div class="font-bold text-3xl py-5 pl-10">My Bookings</div>
                <div class="container mx-auto px-2">
                    <% current_user.bookings.each do |booking| %>
                      <div class="flex-1 text-center bg-white border-2  shadow-2xl shadow-pink-200 px-5 py-5 m-2 rounded">
                        <div class="container mt-4">
                          <div class="lg:flex lg:items-center">
                          <%# ---------------line 1 PHOTO--------------- %>
                            <div class="flex items-center justify-center">
                              <img class="object-cover rounded h-80 w-80"  src="<%= booking.listing.user.avatar %>"/>
                            </div>
                            <div class="p-5">
                              <div class="mt-4 lg:mt-0 lg:ml-6">
                                <p class="uppercase tracking-wide text-lg text-cyan-900 font-bold">You have booked <%= booking.listing.user.first_name %> for a <%= (booking.listing.category.name).capitalize %> Listing </p>
                                  <div>
                                    <p class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-blue-500 hover:bg-white mt-4 md:mt-0"><%= link_to "View Listing", listings_path(user_id: booking.listing.user_id) %></p>
                                  </div>
                                <p class="block mt-1 text-lg leading-tight font-normal text-gray-900">Fee: Â¥<%= booking.listing.fee %> </p>
                                <br>
                                <p class="block mt-1 text-lg leading-tight font-normal text-gray-900">Your booking requirements: <%= booking.requirements %> </p>
                                <br>
                                <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900">Confirmed: <%= booking.status ? "Yes" : "No" %> </p>
                                <br>
                              </div>
                              <div>
                                <p class="inline-block text-sm px-4 py-2 rounded border text-white bg-pink-600 hover:border-pink-600 parent hover:text-pink-600 hover:bg-white"><%= link_to "Edit", edit_booking_path(booking) %></p>
                              </div>
                              <div>
                                <p class="inline-block text-sm px-4 py-2 rounded border text-white bg-pink-600 hover:border-pink-600 parent hover:text-pink-600 hover:bg-white"><%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to delete this booking?"}, class: 'text-danger' %></p>
                              </div>
                              <div>
                                <p class="inline-block text-sm px-4 py-2 rounded border text-white bg-pink-600 hover:border-pink-600 parent hover:text-pink-600 hover:bg-white"><%= link_to "Leave a review", new_booking_review_path(booking) %></p>
