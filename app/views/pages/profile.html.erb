<%# -------------Welcome User, photo and info------------- %>
<div>

  <div class="font-bold text-5xl m-5 text-center">Welcome <%= current_user.first_name %> </div>


   <%#  ----------------image is an oblong ---------------- %>
    <%# <img class="rounded-full items-center mb-3" src="https://images.unsplash.com/photo-1558538449-1e5c89b6dd2e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8Z29sZGVuJTIwcmV0cmVpdmVyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=700&q=60" alt="Sunset in the mountains"> %>

    <%#  ----------------image is squeezed  ----------------%>
  <div class="flex items-center justify-center">
    <img class="object-fill h-80 w-80 rounded-full items-center mb-3" src="<%= current_user.avatar %>" alt="user profile picture">
  </div>

  <div class="items-center px-6">

      <div class="max-w-cover px-5 pt-2 mb-5 rounded-lg overflow-hidden shadow-lg bg-gray-200/20  border-2 border-pink-600">
        <div class="font-bold text-xl text-justify mb-5 "><%= current_user.first_name %> <%= current_user.last_name %></div>
        <div class="font-normal text-md text-justify mb-5 "><%= current_user.email %></div>
      </div>


    <%# <div class="flex space-x-3 -mx-5 px-5"> %>

<div class="flex flex-wrap -mx-5 px-5">
  <div class="w-full sm:w-full md:w-full lg:w-full xl:w-1/2 px-5 mb-5 rounded-lg overflow-hidden shadow-lg bg-gray-200/20 items-center border-2 border-pink-600">
    <div>My Bookings</div>
      <div class="container mt-5 mx-auto px-2">
        <div class="md:flex">
          <% current_user.bookings.each do |booking| %>
            <div class="flex-1 text-gray-700 text-center bg-pink-300 px-5 py-5 m-2 rounded">
              <div class="container mt-4">
                <div class="lg:flex lg:items-center">
                  <div class="lg:flex-shrink-0">
                    <img class="rounded-lg lg:w-64" src="<%= booking.listing.user.avatar %>"/>
                  </div>
                  <div class="p-5">
                    <div class="mt-4 lg:mt-0 lg:ml-6">
                      <p class="uppercase tracking-wide text-sm text-purple-600 font-bold">You have booked <%= booking.listing.user.first_name %> for a <%= (booking.listing.category.name).capitalize %> Listing </p>
                      <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900">Amount: <%= booking.listing.fee %> </p>
                      <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900">Your booking requirements: <%= booking.requirements %> </p>
                      <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900">Confirmed: <%= booking.status ? "Yes" : "No" %> </p>
                    </div>
                    <div>
                      <p><%= link_to "Edit", edit_booking_path(booking), class: "inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-blue-500 hover:bg-white mt-4 md:mt-0" %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="w-full sm:w-full md:w-full lg:w-full xl:w-1/2 px-5 mb-5 rounded-lg overflow-hidden shadow-lg bg-gray-200/20 items-center border-2 border-pink-600">
  <div>My Listings</div>
    <div class="container mt-5 mx-auto px-2">
      <div class="md:flex">
        <% current_user.listings.each do |listing| %>
          <%= link_to listing_path(listing) do %>
            <div class="flex-1 text-gray-700 text-center bg-pink-300 px-5 py-5 m-2 rounded">
              <div class="container mt-4">
                <div class="lg:flex lg:items-center">
                    <div class="lg:flex-shrink-0">
                      <img class="rounded-lg lg:w-64" src="<%= listing.user.avatar %>"/>
                    </div>
                    <div class="p-5">
                      <div class="mt-4 lg:mt-0 lg:ml-6">
                        <p class="uppercase tracking-wide text-sm text-purple-600 font-bold">Hi, my name is <%= listing.user.first_name%></p>
                      </div>
                      <div class="mt-4 lg:mt-0 lg:ml-6">
                        <p class="uppercase tracking-wide text-sm text-purple-600 font-bold"><%= listing.slogan %></p>
                      </div>
                      <div>
                        <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900"><%= listing.description %></p>
                      </div>
                      <div>
                        <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900">Fee: <%= listing.fee %> </p>
                      </div>
                      <div>
                      <p><%= link_to "Edit", edit_listing_path(listing), class: "inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-blue-500 hover:bg-white mt-4 md:mt-0" %></p>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
