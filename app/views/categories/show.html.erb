<div class="text-center mt-5">
  <h1 class="text-cyan-900 text-5xl font-bold"><%= (@category.name).capitalize %> Listings</h1>
  <br>

  <%# Link to add a new listing %>
  <p><%= link_to "Add a listing", new_category_listing_path(@category), class: "inline-block text-sm px-4 py-2 rounded border text-white bg-pink-600 hover:border-pink-600 parent hover:text-pink-600 hover:bg-white" %></p>

</div>
<%# Name of category %>

<!-- END OF NAVBAR -->
<%# Card for Listings %>
<div>
    <h3 class="text-center font-bold text-white text-5xl"> <%= @category.name.capitalize%> Listings</h3>
</div>

<div class="flex items-center justify-center">

  <div class="mx-auto px-2">
    <% @listings.each do |listing| %>
      <%= link_to listing_path(listing) do %>
                <%# --------container Card-------- %>
        <%# <div class="flex flex-wrap items-center justify-center"> %>
          <%# <div class="md:w-full lg:w-1/2 xl:w-1/3"> %>
            <div class=" max-w-lg px-10 py-5 mt-6 bg-white rounded border-2 border-pink-600 overflow-hidden shadow-2xl test-center">
                              <%# --------Image-------- %>
              <div class="flex items-center justify-center">
                <img class="rounded-lg w-80 h-80 object-cover" src="<%= listing.user.avatar %>"/>
              </div>
                <div class="p-5">
                                  <%# --------Line 1 "Hi..."-------- %>
                      <div class="mt-4 lg:mt-0 lg:ml-6">
                        <p class="uppercase tracking-wide text-sm text-cyan-900 font-bold">Hi, my name is <%= listing.user.first_name%></p>
                      </div>
                                  <%# --------Line 2 "best fake BF"..."-------- %>
                      <div class="mt-4 lg:mt-0 lg:ml-6">
                        <p class="uppercase tracking-wide text-sm text-cyan-900 font-semibold"><%= listing.slogan %></p>
                      </div>
                  <br>
                                    <%# --------Line 3 "Description..."-------- %>
                        <div class="mt-4 lg:mt-0 lg:ml-6">
                          <p class="block mt-1 text-lg leading-tight font-md text-gray-900"><%= listing.description %></p>
                        </div>
                  <br>
                                    <%# --------Line 4 "Fee..."-------- %>
                        <div class="mt-4 lg:mt-0 lg:ml-6">
                          <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900">Fee: <%= listing.fee %> </p>
                        </div>
                  <br>
                                    <%# --------Line 5 "Edit..."-------- %>
                        <div class="mt-4 lg:mt-0 lg:ml-6">
                          <p><%= link_to "Edit", edit_listing_path(listing), class: "inline-block text-sm px-4 py-2 leading-none bg-pink-600 rounded text-white border-pink-600 border
                          hover:border-pink-600 hover:text-pink-600 hover:bg-white mt-4 md:mt-0" %></p>
                        </div>
                </div>



            </div>
      <% end %>
    <% end %>
      </div>
        </div>
  </div>
</div>
