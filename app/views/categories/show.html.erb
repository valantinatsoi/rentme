<section class="relative bg-white h-80">
  <img
    class="absolute inset-0 object-[75%] sm:object-[25%] object-cover w-full h-full opacity-30"
    src="https://images.unsplash.com/photo-1491438590914-bc09fcaaf77a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
    alt="people"
  />

  <div class="relative max-w-screen-xl px-4 py-32 mx-auto lg:h-screen lg:items-center">
    <div class="max-w-xl text-center sm:text-left">
      <h1 class="text-3xl font-bold sm:text-5xl text-pink-600 italic">
        <%= (@category.name).capitalize %> Listings
      </h1>
      <br>
      <p><%= link_to "Add a listing", new_category_listing_path(@category), class: "inline-block text-sm px-4 py-2 rounded-full border text-white bg-pink-600 hover:border-pink-600 parent hover:text-pink-600 hover:bg-white"%></p>
      </p>
    </div>
  </div>
</section>

<div class="flex flex-row flex-wrap mx-10">
  <% @listings.each do |listing| %>
    <%= link_to listing_path(listing) do %>
      <div class="relative p-8 text-center border border-gray-200 rounded-lg w-96 m-5 justify-between shadow-lg shadow-pink-200">
          <img
            class="object-cover w-full h-96 px-auto rounded shadow-2xl"
            src="<%= listing.user.avatar %>"
            alt=""
          />

            <h5 class="mt-4 text-xl font-bold text-gray-900 uppercase">Hi, my name is <%= listing.user.first_name%></h5>

            <h5 class="mt-4 text-l font-bold text-gray-900"><%= listing.slogan%></h5>

            <p class="block max-w-sm mt-2 text-gray-700 leading-tight text-left">
              <%= listing.description%>
            </p>
            <br>
            <p class="block mt-1 text-lg leading-tight font-semibold text-gray-900">Fee: Â¥<%= listing.fee %> </p>
            <br>
            <p class="inline-block text-sm px-4 py-2 leading-none bg-pink-600 rounded text-white border-pink-600 border hover:border-pink-600 hover:text-pink-600 hover:bg-white rounded-full items-end"><%= link_to "Edit", edit_listing_path(listing) %></p>
      </div>
    <% end %>
  <% end %>
</div>
