<section class="relative bg-white">
  <img
    class="absolute inset-0 object-[75%] sm:object-[25%] object-cover w-full h-full opacity-25 sm:opacity-100"
    src="https://images.unsplash.com/photo-1490578474895-699cd4e2cf59?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1471&q=80"
    alt="people"
  />

  <div class="hidden sm:block sm:inset-0 sm:absolute sm:bg-gradient-to-r sm:from-white sm:to-transparent"></div>

  <div class="relative max-w-screen-xl px-4 py-32 mx-auto lg:h-screen lg:items-center lg:flex">
    <div class="max-w-xl text-center sm:text-left">
      <h1 class="text-3xl font-extrabold sm:text-5xl text-pink-600">
        Need a fake boyfriend?
      </h1>

      <p class="max-w-lg mt-4 sm:leading-relaxed sm:text-xl">
      Find one to rent with RentMe!
      </p>
    </div>
  </div>
</section>


<!-- CARDS COLUMNS -->

<div class="container mt-5 mx-auto px-2">
  <div class="lg:flex">
    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class="flex-2 border-pink-600 border-2 text-center bg-white px-5 py-5 m-2 shadow-xl rounded-xl">
          <div class="container mt-4">
            <div class="lg:flex lg:items-center">
                <div class="lg:flex-shrink-0">
                  <img class="rounded-lg lg:w-64 lg:h-64 shadow-2xl" src="<%= category.image_url %>"/>
                </div>
                <div class="p-5 flex-wrap">
                  <div class="mt-4 lg:mt-0 lg:ml-6">
                    <p class="flex-wrap uppercase tracking-wide text-lg text-cyan-900 font-bold"><%= category.name %></p>
                  </div>
                  <div>
                    <p class="flex-wrap inline-block mt-1 text-lg leading-tight font-normal text-gray-900"><%= category.description %></p>
                  </div>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
