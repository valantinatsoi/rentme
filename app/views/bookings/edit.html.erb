<h1 class="text-bold text-headings text-2xl text-center py-10 justify-items-center"><strong>Need to make some changes?</strong></h1>
<div class="mt-6 flex justify-center">
  <div class="w-1/2 xl:w-1/2"
      <div class="bg-white rounded p-3 shadow">

        <%= simple_form_for [ @listing, @booking ] do |f| %>
        <br>
        <h2 class ="text-headings text-normal text-xl">Requirement</h2>
          <%= f.input :requirements, label: false,
                      input_html: { class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-gray-500 focus:bg-white
                      focus:ring-0" }%>
        <br>
          <p class="inline-block justify-center text-lg mt:mb2 px-6 py-4 shadow-2xl leading-none border rounded text-hotpink border-hotpink hover:text-white hover:bg-hotpink mt-4 md:mt-0" >
          <%= f.submit class: 'btn btn-flat' %>
          </p>
        <% end %>
      </div>
      <br>
    </div>
  </div>
</div>
