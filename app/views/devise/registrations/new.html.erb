<h1 class="text-bold text-headings text-4xl text-center py-10 justify-items-center"><strong>Sign up</strong></h1>
<div class="mt-6 flex justify-center">
  <div class="w-1/2 xl:w-1/2">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <span class="text-headings text-bold">First Name</span>
          <%= f.input :first_name, label: false,
                      input_html: { autocomplete: "First Name", class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-headings focus:bg-white
                      focus:ring-0" }%>
          <span class="text-headings text-bold">Last Name</span>
          <%= f.input :last_name, label: false,
                      input_html: { autocomplete: "Last Name", class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-headings focus:bg-white
                      focus:ring-0" }%>
          <span class="text-headings text-bold">Avatar (image url)</span>
          <%= f.input :avatar, label: false,
                      input_html: { autocomplete: "Avatar", class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-headings focus:bg-white
                      focus:ring-0" }%>
          <span class="text-headings text-bold">Email</span>
          <%= f.input :email, label: false,
                      input_html: { autocomplete: "Email", class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-headings focus:bg-white
                      focus:ring-0" }%>
          <span class="text-headings text-bold">Password</span>
          <%= f.input :password, label: false,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "New-password", class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-gray-500 focus:bg-white
                      focus:ring-0" } %>
          <span class="text-headings text-bold">Confirm Password</span>
          <%= f.input :password_confirmation, label: false,
                      required: true,
                      input_html: { autocomplete: "New-password", class: "mt-1 mb-4 block w-full rounded-md bg-gray-100
                      border-transparent focus:border-headings focus:bg-white
                      focus:ring-0" } %>

      <div class="my-5 justify-center">
          <div class="form-actions">
              <%= f.submit "Sign up", class:"inline-block text-lg mt:mb2 px-6 py-4 shadow-2xl leading-none border rounded-3xl text-hotpink border-hotpink hover:text-white hover:bg-hotpink mt-4 md:mt-0"%>
          </div>
          </div>
        <% end %>

  </div>
  </div>
